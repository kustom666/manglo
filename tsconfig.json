{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "typings"
    ]
  },
  "include": [
    "src/main/*",
    "typings/*"
  ]
}